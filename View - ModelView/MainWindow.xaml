<Window 
    x:Class="App1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
        <TextBlock Text="Songs" FontSize="56" Margin="12" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                <AppBarButton Label="Update All Songs" Click="updateAllSongsClick"/>
                <AppBarButton Icon="Add" Label="Add" Click="addSongClick"/>
                
            </CommandBar>
        </StackPanel>
        <ListView ItemsSource="{x:Bind songsManager_.songsList_}" SelectionMode="None" Margin="12">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:SongsStorage">
                    <Grid VerticalAlignment="Center" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding title}" FontWeight="Bold" FontSize="18" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <CommandBar Grid.Column="1">
                            <AppBarButton Icon="Download" Label="Update" Click="updateSongClick"/>
                            <AppBarButton Icon="Upload" Label="Upload" Click="uploadNewVersionClick"/>
                            <CommandBar.SecondaryCommands>
                                <AppBarButton Icon="Delete" Label="Delete" Click="deleteSongClick"/>
                            </CommandBar.SecondaryCommands>
                        </CommandBar>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!--<ListView Margin="10" Name="lvDataBinding" ItemsSource="{x:Bind songsManager_.songsList_}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Name: "></TextBlock>
                        <TextBlock Text="{Binding title}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Age: " />
                        <TextBlock Text="{Binding localPath}" FontWeight="Bold" />
                        <TextBlock Text=" (" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
    </StackPanel>
</Window>