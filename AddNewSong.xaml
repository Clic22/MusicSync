<!-- SignInContentDialog.xaml -->
<ContentDialog
    x:Class="App1.AddNewSong"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Sync New Song"
    PrimaryButtonText="Add"  
    CloseButtonText="Cancel"
    PrimaryButtonClick="AddNewSongAddButtonClick">

    <StackPanel>
        <TextBlock x:Name="songTitleLabel" Text="Song Title" Height="20" Margin="12,10,10,0"/>
        <TextBox x:Name="songTitle" AutomationProperties.Name="simple text editor" Margin="10"/>
        <TextBlock x:Name="songlocalPathLabel" Text="Path to Your Song" Height="20" Margin="12,10,10,0"/>
        <TextBox x:Name="songlocalPath" AutomationProperties.Name="simple text editor" Margin="10"/>
    </StackPanel>
</ContentDialog>